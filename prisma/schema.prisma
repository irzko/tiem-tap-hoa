model Category {
  categoryId       String     @id @default(uuid())
  categoryName     String     @unique
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  parentCategoryId String?
  parentCategory   Category?  @relation("SubCategories", fields: [parentCategoryId], references: [categoryId])
  subCategories    Category[] @relation("SubCategories")
  products         Product[]
}

model Product {
  productId     String         @id @default(uuid())
  productName   String         @unique
  description   String
  price         Int
  images        String[]       @default([])
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  weight        Int
  height        Int
  width         Int
  length        Int
  stockQuantity Int
  categoryId    String
  Cart          Cart[]
  Interaction   Interaction[]
  orderDetail   OrderDetail[]
  category      Category       @relation(fields: [categoryId], references: [categoryId])
  Review        Review[]
  ImportDetail  ImportDetail[]
}

model User {
  userId             String               @id @default(uuid())
  email              String               @unique
  fullName           String
  password           String
  role               Role                 @default(USER)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  Address            Address[]
  Cart               Cart[]
  Coupon             Coupon[]
  interaction        Interaction[]
  order              Order[]
  review             Review[]
  orderStatusHistory OrderStatusHistory[]
  usefulness         Usefulness[]
  Message            Message[]
}

model Cart {
  cartId    String   @id @default(uuid())
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  productId String
  product   Product  @relation(fields: [productId], references: [productId])
  user      User     @relation(fields: [userId], references: [userId])
}

model Interaction {
  interactId      String          @id @default(uuid())
  userId          String
  productId       String
  interactionType InteractionType
  timestamp       DateTime        @default(now())
  product         Product         @relation(fields: [productId], references: [productId])
  user            User            @relation(fields: [userId], references: [userId])
}

model Order {
  orderId            String               @id @default(uuid())
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  userId             String
  totalAmount        Float
  Coupon             Coupon[]
  addressId          String
  orderDetails       OrderDetail[]
  paymentMethod      PaymentMethod?
  statusId           String
  OrderStatusHistory OrderStatusHistory[]
  user               User                 @relation(fields: [userId], references: [userId])
  address            Address              @relation(fields: [addressId], references: [addressId])
  orderStatus        OrderStatus          @relation(fields: [statusId], references: [statusId])
}

model OrderStatus {
  statusId String  @id
  status   String
  orders   Order[]
}

model OrderStatusHistory {
  orderStatusHistoryId String   @id @default(uuid())
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  orderId              String
  statusId             String
  userId               String
  order                Order?   @relation(fields: [orderId], references: [orderId])
  user                 User     @relation(fields: [userId], references: [userId])
}

model OrderDetail {
  orderDetailId String   @id @default(uuid())
  quantity      Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  orderId       String
  productId     String
  order         Order    @relation(fields: [orderId], references: [orderId])
  product       Product  @relation(fields: [productId], references: [productId])
}

model PaymentMethod {
  paymentId   String   @id @default(uuid())
  paymentType String
  accountInfo String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderId     String   @unique
  order       Order    @relation(fields: [orderId], references: [orderId])
}

model Review {
  reviewId   String       @id @default(uuid())
  review     String
  rating     Int
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  userId     String
  productId  String
  product    Product      @relation(fields: [productId], references: [productId])
  user       User         @relation(fields: [userId], references: [userId])
  Usefulness Usefulness[]
}

model Usefulness {
  usefulnessId String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String
  reviewId     String
  review       Review   @relation(fields: [reviewId], references: [reviewId])
  user         User     @relation(fields: [userId], references: [userId])
}

model Coupon {
  couponId   String   @id @default(uuid())
  couponCode String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String
  orderId    String
  order      Order    @relation(fields: [orderId], references: [orderId])
  user       User     @relation(fields: [userId], references: [userId])
}

model Address {
  addressId     String   @id @default(uuid())
  phoneNumber   String
  fullName      String
  streetAddress String
  ward          Json
  district      Json
  province      Json
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [userId])
  Order         Order[]
}

enum Role {
  USER
  ADMIN
}

enum InteractionType {
  VIEW
  PURCHASE
  REVIEW
}

model Message {
  messageId      String   @id @default(uuid())
  conversationId String
  userId         String
  content        String
  timestamp      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [userId])
}

model Supplier {
  supplierId   String   @id @default(uuid())
  supplierName String
  phoneNumber  String
  email        String
  address      String
  otherInfo    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ProductImport {
  productImportId String           @id @default(uuid())
  supplierId      String
  importDate      DateTime
  totalValue      Float
  status          String
  Shipping        Shipping[]
  QualityControl  QualityControl[]
  ImportHistory   ImportHistory[]
  ImportDetail    ImportDetail[]
}

model ImportDetail {
  importDetailId  String        @id @default(uuid())
  quantity        Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  productId       String
  price           Float
  productImportId String
  productImport   ProductImport @relation(fields: [productImportId], references: [productImportId])
  product         Product       @relation(fields: [productId], references: [productId])
  totalValue      Float
}

model Warehouse {
  warehouseId   String  @id @default(uuid())
  address       String
  warehouseName String
  description   String?
}

model Shipping {
  shippingId      String        @id @default(uuid())
  shippingName    String
  description     String?
  productImportId String
  shippingFee     Float
  productImport   ProductImport @relation(fields: [productImportId], references: [productImportId])
  estimatedTime   DateTime
  actualTime      DateTime
}

model QualityControl {
  qualityControlId String        @id @default(uuid())
  productImportId  String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  productImport    ProductImport @relation(fields: [productImportId], references: [productImportId])
  result           String
  note             String?
}

model ImportHistory {
  importHistoryId String        @id @default(uuid())
  productImportId String
  productImport   ProductImport @relation(fields: [productImportId], references: [productImportId])
  status          String
  importDate      DateTime
  importBy        String
}
